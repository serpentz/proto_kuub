    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server.js",
            "program": "${workspaceRoot}/server.js",
            "outFiles": [ "${workspaceRoot}/.compiled/**/*.js" ],
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": [
                "--harmony",
                "--no-deprecation"
            ],
            "smartStep": true
          }
    ]
}